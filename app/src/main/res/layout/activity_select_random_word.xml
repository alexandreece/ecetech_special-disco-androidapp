<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Dictionnaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eq1"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Faune"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/background_light"
        android:background="@drawable/gradient_box"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/boutonFaune"
        android:textColor="@android:color/black"
        android:onClick="fauneTouched" />
    <Button
        android:text="Fictif"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/background_light"
        android:background="@drawable/gradient_box"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/boutonFictif"
        android:textColor="@android:color/black"
        android:onClick="fictifTouched" />
    <Button
        android:text="Flore"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/background_light"
        android:background="@drawable/gradient_box"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/boutonFlore"
        android:textColor="@android:color/black"
        android:onClick="floreTouched" />
    <Button
        android:text="Objet"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/background_light"
        android:background="@drawable/gradient_box"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/boutonObjet"
        android:textColor="@android:color/black"
        android:onClick="objetTouched" />
    <Button
        android:text="People"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/background_light"
        android:background="@drawable/gradient_box"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/boutonPeople"
        android:textColor="@android:color/black"
        android:onClick="peopleTouched" />

</LinearLayout>