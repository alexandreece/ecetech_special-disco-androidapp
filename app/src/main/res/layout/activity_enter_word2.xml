<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lama.lamapp.EnterWord2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ActivityEnterword2_Textview_title"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="Entrer les mots"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:textStyle="normal|bold"
                    />

                <LinearLayout
                    android:id="@+id/ActivityEnterword2_LinearLayout_Listviewconstraint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/ActivityEnterword2_listView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/ActivityEnterword2_button"
                        android:layout_weight="16.66" />
                </LinearLayout>

                <Button
                    android:id="@+id/ActivityEnterword2_button"
                    android:layout_width="300dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/gradient_box"
                    android:backgroundTint="?attr/colorButtonNormal"
                    android:onClick=""
                    android:text="Commencer le jeu"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:textSize="25sp" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
