<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="618dp">

                        <TextView
                            android:text="Entrez les mots"
                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView1"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:layout_marginTop="22dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:text="LAMAtraque"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:layout_marginTop="16dp"
                            android:layout_below="@+id/textView1"
                            android:layout_alignParentStart="true" />

                        <EditText
                           android:layout_width="235dp"
                           android:layout_height="35dp"
                           android:background="#FFFFFF"
                           android:gravity="center"
                           android:hint="Superman"
                           android:width="200dp"
                           android:height="35dp"
                           android:id="@+id/editText2"
                           android:layout_marginTop="32dp"
                            android:layout_marginStart="48dp"
                            android:layout_below="@+id/textView2"
                            android:layout_alignParentStart="true" />

                        <Button
                            android:text="Ok"
                            android:height="35dp"
                            android:id="@+id/button2"
                            android:layout_height="35dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_width="35dp"
                            android:elevation="0dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:layout_alignBaseline="@+id/editText3"
                            android:layout_alignBottom="@+id/editText3"
                            android:layout_alignParentEnd="true"
                            android:layout_alignStart="@+id/button1" />

                        <Button
                            android:text="Dictionnaire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button5"
                            android:layout_alignBaseline="@+id/button6"
                            android:layout_alignBottom="@+id/button6"
                            android:layout_toStartOf="@+id/button6" />

                        <Button
                            android:text="Aléatoire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="29dp"
                            android:id="@+id/button6"
                            android:layout_below="@+id/editText2"
                            android:layout_centerHorizontal="true" />

                        <Button
                            android:text="Precedents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button7"
                            android:textSize="14sp"
                            android:layout_marginEnd="22dp"
                            android:layout_alignBaseline="@+id/button6"
                            android:layout_alignBottom="@+id/button6"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:text="LAMAlédiction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:layout_marginTop="126dp"
                            android:layout_below="@+id/editText2"
                            android:layout_alignParentStart="true" />

                        <EditText
                            android:layout_width="235dp"
                            android:layout_height="35dp"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:hint="Papillon"
                            android:width="200dp"
                            android:height="35dp"
                            android:id="@+id/editText3"
                            android:layout_marginTop="34dp"
                            android:layout_below="@+id/textView3"
                            android:layout_alignStart="@+id/editText2" />

                        <Button
                            android:text="Ok"
                            android:height="35dp"
                            android:id="@+id/button1"
                            android:layout_height="35dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:elevation="0dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:layout_above="@+id/textView3"
                            android:layout_toEndOf="@+id/editText2" />

                        <Button
                            android:text="Dictionnaire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button8"
                            android:layout_below="@+id/editText3"
                            android:layout_alignStart="@+id/button5"
                            android:layout_marginTop="19dp" />

                        <Button
                            android:text="Aléatoire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button9"
                            android:layout_alignBaseline="@+id/button8"
                            android:layout_alignBottom="@+id/button8"
                            android:layout_toStartOf="@+id/button10" />

                        <Button
                            android:text="Precedents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button10"
                            android:textSize="14sp"
                            android:layout_alignBaseline="@+id/button9"
                            android:layout_alignBottom="@+id/button9"
                            android:layout_alignStart="@+id/button7" />

                        <Button
                            android:text="Commencer le jeu"
                            android:layout_gravity="center"
                            android:backgroundTint="@android:color/background_light"
                            android:background="@drawable/gradient_box"
                            android:textColor="@android:color/black"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:id="@+id/button3"
                            android:layout_height="35dp"
                            android:layout_width="250dp"
                            android:layout_marginTop="135dp"
                            android:layout_below="@+id/editText3"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
