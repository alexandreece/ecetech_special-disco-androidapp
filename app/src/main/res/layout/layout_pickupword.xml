<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/Layout_PickupWord_Button_Randomword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/Layout_PickupWord_Button_Dicoword"
        android:layout_toEndOf="@+id/Layout_PickupWord_Button_Pastword"

        android:text="Aléatoire" />

    <Button
        android:id="@+id/Layout_PickupWord_Button_Pastword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/Layout_PickupWord_EditText_Word"
        android:layout_alignTop="@+id/Layout_PickupWord_Button_Randomword"
        android:onClick="precedent"
        android:text="Précédents" />

    <Button
        android:id="@+id/Layout_PickupWord_Button_Dicoword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/Layout_PickupWord_Button_ok"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/Layout_PickupWord_Button_Randomword"
        android:text="Dico" />


    <EditText
        android:id="@+id/Layout_PickupWord_EditText_Word"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/Grey_LAMApp" />

    <Button
        android:id="@+id/Layout_PickupWord_Button_ok"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="Ok"
        android:layout_alignBottom="@+id/Layout_PickupWord_EditText_Word"
        android:layout_alignParentEnd="true" />



</RelativeLayout>