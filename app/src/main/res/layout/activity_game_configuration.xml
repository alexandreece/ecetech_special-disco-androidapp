<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#017E80"
    android:weightSum="1">

    <TextView
        android:text="Choisissez votre configuration :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:id="@+id/textView1" />

    <Button
        android:text="2 x 2 joueurs"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_weight="0.06"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_box"
        android:backgroundTint="@android:color/background_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:id="@+id/button3"
        android:onClick="nbJoueursx2" />

    <Button
        android:text="2 x 3 joueurs"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_weight="0.06"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_box"
        android:backgroundTint="@android:color/background_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:id="@+id/button4"
        android:onClick="nbJoueursx3"/>

    <Button
        android:text="2 x 4 joueurs"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_weight="0.06"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_box"
        android:backgroundTint="@android:color/background_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:id="@+id/button5"
        android:onClick="nbJoueursx4"/>

    <Button
        android:text="2 x 5 joueurs"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_weight="0.06"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_box"
        android:backgroundTint="@android:color/background_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:id="@+id/button6"
        android:onClick="nbJoueursx5"/>

</LinearLayout>