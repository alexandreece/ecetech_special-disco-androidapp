<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textPersonName"
        android:text="Joueur 1"
        android:ems="10"
        android:id="@+id/word"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/progressBar"
        android:textColor="@color/colorText"/>

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_alignBottom="@+id/word"
        android:layout_alignEnd="@+id/button10"
        android:layout_marginEnd="14dp" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_above="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:layout_marginStart="7dp"
        android:layout_alignEnd="@+id/button12"
        android:layout_below="@+id/word"
        android:visibility="visible" />

    <Button
        android:text="Précédents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_alignBaseline="@+id/button12"
        android:layout_alignBottom="@+id/button12"
        android:layout_toStartOf="@+id/button12" />

    <Button
        android:text="Aléatoire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:layout_alignBaseline="@+id/button10"
        android:layout_alignBottom="@+id/button10"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Dictionnaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/button11"
        android:layout_toEndOf="@+id/button12" />

</RelativeLayout>
