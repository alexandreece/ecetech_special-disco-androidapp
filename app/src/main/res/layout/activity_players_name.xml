<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forlistview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/textEqA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nommez l'équipe A"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textSize="24sp" />
    <EditText
        android:layout_width="250dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:layout_marginTop="9dp"
        android:background="@color/colorText"
        android:id="@+id/nameEqA"
        android:textSize="18sp"
        android:layout_height="30dp"
        android:hint="Exemple : LAMAtiere"
        android:layout_below="@+id/textEqA"
        android:layout_alignStart="@+id/nameEqB" />


     <ListView
            android:id="@+id/listA"
            android:layout_below="@id/nameEqA"
            android:layout_width="match_parent"
         android:layout_height="170dp">

        </ListView>


     <ListView
            android:id="@+id/listB"
            android:layout_below="@id/nameEqB"
            android:layout_width="match_parent"
         android:layout_height="170dp">

        </ListView>


     <TextView
         android:id="@+id/textEqB"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:text="Nommez l'équipe B"
         android:gravity="center"
         android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
         android:textSize="24sp"
         android:layout_below="@+id/listA"
         android:layout_alignParentStart="true" />

     <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:layout_marginTop="9dp"
         android:background="@color/colorText"
         android:id="@+id/nameEqB"
            android:hint="Exemple : LAMAtrice"
         android:layout_marginBottom="10dp"
         android:layout_marginStart="32dp"
         android:layout_below="@+id/textEqB"
         android:layout_alignParentStart="true" />

            <Button
                android:text="Valider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/okPlayerName"
                android:layout_below="@+id/listB"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:inputType="text|textPersonName" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>