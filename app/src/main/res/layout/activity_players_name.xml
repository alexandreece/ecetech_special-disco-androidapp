<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#017E80"
    android:weightSum="1"
    android:orientation="vertical">


    <TextView
        android:text="Nommez l'équipe A :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Joueur :"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textAlignment="viewStart"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="60dp"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/editText1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="30dp"
        android:id="@+id/editText3"
        android:textColor="?attr/actionMenuTextColor"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:textAlignment="textStart"
        android:hint=" Exemple: Lucas"
        android:layout_width="200dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp" />

    <TextView
        android:text="Nommez l'équipe B :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="248dp"
        android:layout_height="30dp"
        android:id="@+id/editText1"
        android:textColor="?attr/actionMenuTextColor"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:textAlignment="textStart"
        android:hint=" Exemple: LAMAtraque"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView1"
        android:layout_alignStart="@+id/editText4" />

    <EditText
        android:layout_height="30dp"
        android:id="@+id/editText2"
        android:textColor="?attr/actionMenuTextColor"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:textAlignment="textStart"
        android:hint=" Exemple: Versatil"
        android:layout_width="200dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/editText3" />

    <TextView
        android:text="Joueur :"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView4"
        android:textSize="30sp"
        android:textAlignment="viewStart"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="248dp"
        android:id="@+id/editText4"
        android:textColor="?attr/actionMenuTextColor"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:textAlignment="textStart"
        android:hint=" Exemple: LAMAlédiction"
        android:layout_marginTop="23dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>