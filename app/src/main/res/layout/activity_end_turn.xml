<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_end_turn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:orientation="horizontal">

    <TextView
        android:text=""
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:id="@+id/text_round"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:id="@+id/text_team"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/text_player_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="C'est fini !!! "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Points_TextView_Fin"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:textSize="30sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/text_player_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_height="wrap_content"
        android:id="@+id/Points_Message"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/text_round"
        android:layout_marginLeft="50dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Points_Message"
        android:layout_marginTop="20dp"
        android:id="@+id/layoutpoint">

    </LinearLayout>

    <Button
        android:text="Continuer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="goto_EndTurnRecap"/>

</RelativeLayout>
