<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#017E80"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:text="Manche 1"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="15dp"
        android:textAlignment="textStart"
        android:id="@+id/text_round" />

    <TextView
        android:text="Joueur 1"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text_team_one_player_one" />

    <TextView
        android:text="1 : 00"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/chronometer" />

    <TextView
        android:text="Vélociraptor"
        android:textSize="50sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/word_play" />

    <TextView
        android:text="LAMAtraque"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="15dp"
        android:textAlignment="textEnd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text_team_one"/>

    <TextView
        android:text="9/60"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="335dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/word_find" />

    <Button
        android:layout_width="80dp"
        android:layout_height="300dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/text_round"
        android:background="@drawable/gradient_box"
        android:backgroundTint="#818181"
        android:elevation="0dp"
        android:text="⟳"
        android:textSize="75sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:id="@+id/button_quit_word" />

    <Button
        android:layout_width="80dp"
        android:layout_height="300dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/text_team_one"
        android:background="@drawable/gradient_box"
        android:backgroundTint="#35a54f"
        android:text="✓"
        android:textSize="70sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:id="@+id/button_valid_word"/>

</RelativeLayout>
