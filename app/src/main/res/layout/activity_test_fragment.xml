<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.lama.lamapp.TestFragmentActivity">

    <Button
        android:layout_width="80dp"
        android:layout_height="250dp"
        android:background="@drawable/gradient_box"
        android:backgroundTint="#818181"
        android:elevation="0dp"
        android:text="⟳"
        android:textSize="75sp"
        android:textAlignment="center"
        android:id="@+id/button_quit_word"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Manche 1"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:id="@+id/text_round"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="LAMAtraque"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:id="@+id/text_team_one"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="250dp"
        android:background="@drawable/gradient_box"
        android:backgroundTint="#35a54f"
        android:text="✓"
        android:textSize="70sp"
        android:textAlignment="center"
        android:id="@+id/button_valid_word"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="UpdateWord"/>

    <TextView
        android:text="Joueur 1"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/text_team_one_player_one"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/ShowWord"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/button_quit_word" />

    <TextView
        android:text=""
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/ShowTimer"
        android:layout_alignTop="@+id/button_valid_word"
        android:layout_toEndOf="@+id/button_quit_word" />

</RelativeLayout>
