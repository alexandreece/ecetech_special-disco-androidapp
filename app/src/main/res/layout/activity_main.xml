<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lama.lamapp.Main">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/goto_Main"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Main Menu"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:onClick="goto_Main"
                />

            <Button
                android:id="@+id/adrien"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="adrien"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:onClick="adrien"
                />

            <Button
                android:id="@+id/lucas_level"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="lucas level"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:onClick="lucasLevel"
                />

            <Button
                android:id="@+id/lucas_game"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="lucas game"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:onClick="lucasInGame"
                />

            <Button
                android:id="@+id/alex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Alex"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:onClick="alex"
                />

            <Button
                android:id="@+id/maeva1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Maeva game"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:onClick="maevaGame"
                />

            <Button
                android:id="@+id/maeva"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Maeva players"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:onClick="maevaPlayers"
                />

            <Button
                android:id="@+id/maeva2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Maeva enter word"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:onClick="maevaEnterWord"
                />
            <Button
                android:id="@+id/playername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Maeva enter word"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:onClick="playername"
                />
        </LinearLayout>

    </LinearLayout>
