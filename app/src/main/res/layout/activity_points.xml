<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_points"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lama.lamapp.Activity_points">

    <TextView
        android:text="Joueur 1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignBaseline="@+id/Points_TextView_Manche"
        android:layout_alignBottom="@+id/Points_TextView_Manche"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginStart="193dp"
        android:textSize="30sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/Points_TextView_Fin"
        android:layout_alignParentStart="true"
        android:layout_height="145dp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="C'est fini !!! "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Points_TextView_Fin"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Points_TextView_Equipe"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Manche 1"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/Points_TextView_Manche"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="170dp" />

    <TextView
        android:text="LAMATRAQUE"
        android:layout_height="wrap_content"
        android:id="@+id/Points_TextView_Equipe"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignParentEnd="true"
        android:textSize="26sp"
        android:layout_width="170dp" />
</RelativeLayout>
